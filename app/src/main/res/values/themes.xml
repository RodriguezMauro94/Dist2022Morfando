<resources>
    <!-- Base application theme. -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>
    <style name="Theme.Morfando" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemRippleColor">@color/secondary</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    <style name="MorfandoTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>

    </style>
    <style name="MorfandoButtonTransparentBorderless" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
    </style>
    <style name="MorfandoButtonTransparentOutlined" parent="MorfandoButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    <style name="MorfandoButtonSecondary" parent="MorfandoButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red</item>
        <item name="strokeColor">@color/red</item>
    </style>
    <style name="MorfandoButtonBase">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_radio</item>
        <item name="rippleColor">@color/button_ripple</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/button_stroke</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
    </style>

    <style name="MorfandoTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="placeholderTextColor">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">#7B8E95</item>
        <item name="boxBackgroundColor">#464C58</item>
    </style>
    <style name="MorfandoTextInputEditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MorfandoRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/morfando_rating_bar</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
    </style>
</resources>