<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uade.dist.morfando">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_morfando"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_morfando_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Splash"
        android:usesCleartextTraffic="true"
        tools:replace="android:fullBackupContent"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.OwnerLoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.OwnerRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.OwnerForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.RequestGeoPermissionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.RestaurantDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.MenuItemDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.OpenHoursActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.GalleryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.RatingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.MyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.MyRestaurantsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.CreateEditRestaurantActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.CreateEditMenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.CreateEditMenuItemActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.PersonalDataActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.OwnerChangePasswordActivity"
            android:exported="false" />
    </application>
</manifest>